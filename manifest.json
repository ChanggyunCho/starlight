{
    "manifest_version": 2,

    "name": "StarLight",
    "description": "This extension allows to pick out the web source and embed your own site",
    "version": "0.1",
    "minimum_chrome_version": "10.0",

    "devtools_page": "devtools.html",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"],
            "all_frames": true
        }
    ],

    "permissions": [
        "tabs",
        "<all_urls>"
    ]
}